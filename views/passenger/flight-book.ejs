<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/flight.css">
<link rel="stylesheet" href="/css/passengerInfo.css">
<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    input:invalid {
        border: red solid 3px;
      }

</style>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    
    <div class="flight-container"><strong>Flight Number: <%= f%> </strong><br> Please Enter the correct Information</div>
    <form action="/passengerInfo">
        <fieldset>
            <legend>Passenger Information</legend>
        <table>
        <tr>
            <td>
                <div class="form-control">
                    <label for="name">Full Name*</label>
                    <input type="text" name="name" placeholder="Full Name" required>
                </div>
            </td>
            <td>
                <div class="form-control">
                    <label for="dob">Date of birth*</label>
                    <input type="date" name="dob" required>
                </div>
            </td>
        </tr>
        </table>
        <table>
        <tr><td><b>Location information</b></td></tr>
        <tr>
            <td>
                <div class="form-control">
                    <label for="state">State*</label>
                    <input type="input" name="state" placeholder="state" required>
                </div>
            </td>
            <td>
                <div class="form-control">
                    <label for="city">City*</label>
                    <input type="text" name="city" placeholder="City Name" required>
                </div>
            </td>
            <td>
                <div class="form-control">
                    <label for="city">Zip-Code</label>
                    <input type="text" name="zip" placeholder="Zip Code">
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-control">
                    <label for="gender">Gender*</label>
                    <select name="gender" required>
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                        <option value="O">Others</option>
                    </select>
                </div>
            </td>
            <td>
                <div class="form-control">
                    <label for="email">Email*</label>
                    <input type="email" name="email" placeholder="xyz@email.com" required>
                </div>
            </td>
            <td>
                <div class="form-control">
                    <label for="contact">Contact Number*</label>
                    <input type="number" name="contact" maxlength="10" placeholder="98--------"  required>
                </div>
            </td>
        </tr>
        <tr>
        <td>
        <div class="form-control">
            <label for="Seat">Select Seat*</label>
        <select class="form-select" aria-label="Default select example" name="seat" multiple>
            <% for (let s of s_info) { %>
                <% if(s.seat_status!= 'o') { %>
                    <option class="<%= s.s_type%>">
                        <%= s.seat_num%>
                    </option>
                <%}%>
            <%}%>
          </select>   
        </div>
        </td>
        <td> Gold= First class Seat (Rate:<%= fc%>)<br> Red= Business class Seat(Rate:<%= bc%>) <br> Blue= Economy class seat(Rate:<%= ec%>)</td>
        </tr>       
        </table>
        <input type="hidden" name="f_id" value="<%= f%>">
        <button>Submit</button>
    </form>
</fieldset>
<%- include('../includes/end.ejs') %>