<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/admin-login.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    

<div class="wrapper fadeInDown">
  <div id="formContent">
    <div class="fadeIn first">
      <img src="/images/Admin-login.ico" id="icon" alt="User Icon" />
    </div>

    <!-- Login Form -->
    <form action="/admin-info" method="POST">
      <input type="text" id="login" class="fadeIn second" name="login" placeholder="User-ID" required>
      <input type="password" id="password" class="fadeIn third" name="password" placeholder="Password" required>
      <button class="fadeIn fourth">Log-In</button>
      <% if(Message!=""){ %>
        <div class="alert-danger" role="alert">
          <strong>WRONG INFO!!</strong> Please Re-Enter your info.
        </div>
        <% } %>
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="underlineHover" href="#">Forgot Password?</a>
    </div>

  </div>
</div>

<%- include('../includes/end.ejs') %>